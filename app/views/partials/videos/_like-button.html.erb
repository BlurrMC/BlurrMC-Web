<% pre_like = video.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>
    <%= link_to image_tag('unlike-heart-icon.png', class: 'like-icon'), video_like_path(video, pre_like), method: :delete, id: "videounlikebutton", remote: true %>
<% else %>
    <%= link_to image_tag('like-heart-icon.png', class: 'like-icon'), video_likes_path(video), method: :post, id: "videolikebutton", remote: true %>
<% end %>