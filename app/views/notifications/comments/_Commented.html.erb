<tr>
<td class="notification-cell">
<%= link_to c_path(id: notification.actor.username) do %>
  <%= user_avatar_variant(notification.actor, "rounded-circle notification-avatar", resize: '150x150^', extent: '150x150', gravity: 'Center') %>
<% end %>
<%= link_to c_path(id: notification.actor.username), class: 'haam' do %>@<%= notification.actor.username%><% end %>
<p><%= notification.action %> on your video, <%= notification.notifiable.body %></p>
<%= link_to image_tag(notification.notifiable.commentable.clip.thumb.urlm class: 'video-notification-thumbnail'), notification.notifiable.commentable, class: 'notification-a' %>
</td>
</tr>
