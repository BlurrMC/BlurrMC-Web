<% pre_like = comment.commentlikes.find { |commentlike| commentlike.user_id == current_user.id} %>
<% if pre_like %>
    <%= button_to 'Unlike', video_comment_commentlike_path(video, comment, pre_like), method: :delete, remote: true, id: "commentunlike#{comment.id}" %>
<% else %>
    <%= button_to 'Like', {:controller => :commentlikes, :action => 'create', :video_id => video.id, :comment_id => comment.id}, method: :post, remote: true, id: "commentlike#{comment.id}"  %>
<% end %>