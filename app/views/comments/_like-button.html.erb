<% pre_like = comment.commentlikes.find { |commentlike| commentlike.user_id == current_user.id} %>
<% if pre_like %>
    <%= link_to image_tag('unlike-heart-icon.png', class: 'like-icon'), video_comment_commentlike_path(video, comment, pre_like), method: :delete, remote: true, id: "commentunlike#{comment.id}" %>
<% else %>
    <%= link_to image_tag('like-heart-icon.png', class: 'like-icon'), {:controller => :commentlikes, :action => 'create', :video_id => video.id, :comment_id => comment.id}, method: :post, remote: true, id: "commentlike#{comment.id}"  %>
<% end %>